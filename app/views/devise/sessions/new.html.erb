<div class="log-in-holder">
  <div class="log-in-div">

    <div class="log-in-main">
      <div class="buzz-logo">
        <%= image_tag "buzz-text.png", :class => "sign-in-img" %>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "holder") do |f| %>
        <div class="form-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "text-field" %>
        </div>

        <div class="form-field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "text-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "log-in-cta" %>
        </div>
      <% end %>
        <div class="options">
          <%= render "devise/shared/links" %>
        </div>
    </div>

    <div>
      <%= image_tag "sign-in.png", :class => "sign-in-main" %>
    </div>

  </div>
</div>
